<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 text-center">
    <%= cl_image_tag @cocktail.photo, height: 100 %>
      <h1><%= @cocktail.name %></h1>
      <h4> Ingredients </h4>
      <% @cocktail.doses.each do |dose| %>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <% end %>
      <br>
      <%= simple_form_for @dose, url: cocktail_doses_path(@cocktail) do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :ingredient_id %>
      <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
      <%= f.submit %>
      <% end %>
      <br>
      <%= link_to 'Index', cocktails_path %>
    </div>
  </div>
</div>
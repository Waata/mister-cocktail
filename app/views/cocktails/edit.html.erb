<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 text-center">
      <h1><%= @cocktail.name %></h1>   
      <h2> Cocktail edit </h2>
      <h1><%= @doses %></h1>
      <h1><%= @ingredients %></h1>     
      <br>
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit :class=> "btn btn-primary"%>
      <% end %>
      <%= link_to 'Index', cocktails_path %>
    </div>
  </div>
</div>
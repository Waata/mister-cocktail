<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 text-center">
      <h1> Shake some nice beverages </h1>
      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit :class=> "btn btn-danger"%>
      <% end %>
      <br>
      <%= link_to 'Index', cocktails_path %>
    </div>
  </div>
</div>

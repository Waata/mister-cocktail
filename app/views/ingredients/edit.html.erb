<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 text-center">
      <h1>Rename an ingredient</h1>
      <ul>
        <% @ingredient.cocktails.each do |cocktail| %>
        <li><%= cocktail.name %></li>
        <% end %>
        <%= simple_form_for @ingredient do |f| %>
        <%= f.label :description %>
        <%= f.text_field :name %>
        <%= f.label :ingredient_id %>
        <%= f.submit :class=> "btn btn-danger"%>
        <% end %>
        <%= link_to 'Index', cocktails_path %>
      </ul>
    </div>
  </div>
</div>

<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 text-center">
      <h1>Listing ingredients</h1>
        <% @ingredients.each do |ingredient| %>
         <li> <%= ingredient.name %></li>
          <%= link_to 'Show', ingredient %>
          <%= link_to 'Edit', [:edit, ingredient] %>
          <%= link_to 'Delete', ingredient, method: :delete, data: { confirm: 'U sure?' } %>
        <% end %>
      <li><%= link_to 'Index', cocktails_path %></li>
    </div>
  </div>
</div>